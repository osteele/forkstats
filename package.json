{
  "name": "gh-forkstats",
  "version": "0.0.4",
  "description": "Display stats about a GitHub repo's forks",
  "repository": "osteele/gh-forkstats",
  "author": "Oliver Steele",
  "license": "MIT",
  "bin": "dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsc --declaration",
    "lint": "eslint index.js",
    "cli": "ts-node index.ts",
    "test": "jest",
    "test-ci": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "apollo-client-preset": "^1.0.3github-",
    "apollo-link": "^1.0.3",
    "apollo-link-context": "^1.0.1",
    "apollo-link-http": "^1.2.0",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.5.0",
    "node-fetch": "^2.6.2",
    "relative-date": "^1.1.3",
    "table": "^6.7.1",
    "update-notifier": "^5.1.0",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/jest": "^27.0.2",
    "@types/node-fetch": "^2.5.12",
    "@types/table": "^6.3.2",
    "@types/update-notifier": "^5.1.0",
    "@types/yargs": "^17.0.2",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.2.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.ts",
      "**/index.test.ts"
    ]
  }
}
